{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/products/.todo/[id]-page-client-component.tsx",
    "src/app/products/.todo/example1.tsx"
  ],
  "exclude": ["node_modules", "./src/trash/", "apps/client/src/app/development"]
}
